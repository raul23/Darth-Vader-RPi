{
  "quiet": false,
  "simulation": false,
  "verbose": false,
  "mode": "BCM",
  "sounds_directory": "~/Data/star_wars_sound_effects/ogg",

  "gpio_channels": [
    {
      "channel_name": "lightsaber_button",
      "display_name": "lightsaber_button",
      "channel_number": 23,
      "key": "cmd"
    },
    {
      "channel_name": "song_button",
      "display_name": "song_button",
      "channel_number": 24,
      "key": "alt"
    },
    {
      "channel_name": "quotes_button",
      "display_name": "quotes_button",
      "channel_number": 25,
      "key": "alt_r"
    },
    {
      "channel_name": "top_led",
      "display_name": "top",
      "channel_number": 11
    },
    {
      "channel_name": "middle_led",
      "display_name": "middle",
      "channel_number": 9
    },
    {
      "channel_name": "bottom_led",
      "channel_number": 10
    },
    {
      "channel_name": "lightsaber_led",
      "display_name": "lightsaber",
      "channel_number": 22,
      "led_symbols": {
        "ON": "\\033[1;31;48m⬤\\033[1;37;0m",
        "OFF": "⬤"
      }
    }
  ],

  "slot_leds":{
    "delay_subsequences": 0.5,
    "time_leds_on": 1,
    "sequence":[
      ["top", "middle", "bottom"],
      ["top", "bottom"],
      ["top", "middle", "bottom"],
      ["top"],
      [],
      ["top", "middle", "bottom"],
      ["top"],
      ["top", "middle", "bottom"],
      ["middle", "bottom"],
      [],
      ["top", "bottom"],
      ["top", "middle", "bottom"],
      ["top", "bottom"],
      [],
      ["top"],
      []
    ]
  },

  "audio_channels": [
    {
      "channel_id": 0,
      "volume": 0.2
    },
    {
      "channel_id": 1,
      "volume": 1.0
    },
    {
      "channel_id": 2,
      "volume": 1.0
    }
  ],

  "quotes": [
    {
      "name": "i_am_your_father",
      "filename": "quote_i_am_your_father.ogg",
      "channel_id": 1
    },
    {
      "name": "dont_make_me_destroy_you",
      "filename": "quote_dont_make_me_destroy_you.ogg",
      "channel_id": 1
    },
    {
      "name": "give_yourself_to_the_dark_side",
      "filename": "quote_give_yourself_to_the_dark_side.ogg",
      "channel_id": 1
    },
    {
      "name": "if_you_only_knew_the_power_of_the_dark_side",
      "filename": "quote_if_you_only_knew_the_power_of_the_dark_side.ogg",
      "channel_id": 1
    },
    {
      "name": "nooooo",
      "filename": "quote_nooooo.ogg",
      "channel_id": 1
    },
    {
      "name": "there_is_no_escape",
      "filename": "quote_there_is_no_escape.ogg",
      "channel_id": 1
    },
    {
      "name": "your_lack_of_faith_is_disturbing",
      "filename": "quote_your_lack_of_faith_is_disturbing.ogg",
      "channel_id": 1
    }
  ],

  "songs": [
    {
      "name": "imperial_march_song",
      "filename": "song_the_imperial_march.ogg",
      "channel_id": 1
    }
  ],

  "sound_effects": [
    {
      "name": "breathing_sound",
      "filename": "darth_vader_breathing.ogg",
      "channel_id": 0,
      "play_opening": true,
      "loops": -1
    },
    {
      "name": "lightsaber_drawing_sound",
      "filename": "lightsaber_drawing_sound.ogg",
      "channel_id": 2
    },
    {
      "name": "lightsaber_hum_sound",
      "filename": "lightsaber_hum_sound.ogg",
      "channel_id": 2
    },
    {
      "name": "lightsaber_retraction_sound",
      "filename": "lightsaber_retraction_sound.ogg",
      "channel_id": 2
    },
    {
      "name": "closing_sound",
      "filename": "quote_nooooo.ogg",
      "channel_id": 2,
      "play_closing": false
    }
  ]
}
