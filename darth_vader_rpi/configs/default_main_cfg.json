{
  "quiet": false,
  "simulation": false,
  "verbose": false,
  "mode": "BCM",
  "sounds_directory": "~/Data/star_wars_sound_effects/ogg",

  "gpio_channels": [
    {
      "channel_id": "lightsaber_button",
      "channel_name": "lightsaber_button",
      "channel_number": 23,
      "key": "cmd"
    },
    {
      "channel_id": "song_button",
      "channel_name": "song_button",
      "channel_number": 24,
      "key": "alt"
    },
    {
      "channel_id": "quotes_button",
      "channel_name": "quotes_button",
      "channel_number": 25,
      "key": "alt_r"
    },
    {
      "channel_id": "top_led",
      "channel_name": "top",
      "channel_number": 11
    },
    {
      "channel_id": "middle_led",
      "channel_name": "middle",
      "channel_number": 9
    },
    {
      "channel_id": "bottom_led",
      "channel_name": "bottom",
      "channel_number": 10
    },
    {
      "channel_id": "lightsaber_led",
      "channel_name": "lightsaber",
      "channel_number": 22
    }
  ],

  "slot_leds":{
    "delay_subsequences": 0.5,
    "time_leds_on": 1,
    "sequence": "action"
  },

  "audio_channels": [
    {
      "channel_id": 0,
      "channel_name": "breathing_sound",
      "volume": 0.2
    },
    {
      "channel_id": 1,
      "channel_name": "song_and_quotes",
      "volume": 1.0
    },
    {
      "channel_id": 2,
      "channel_name": "lightsaber_and_closing_sounds",
      "volume": 1.0
    }
  ],

  "quotes": [
    {
      "id": "i_am_your_father",
      "name": "I am your father",
      "filename": "quote_i_am_your_father.ogg",
      "audio_channel_id": 1
    },
    {
      "id": "dont_make_me_destroy_you",
      "name": "Don't make me destroy you",
      "filename": "quote_dont_make_me_destroy_you.ogg",
      "audio_channel_id": 1
    },
    {
      "id": "give_yourself_to_the_dark_side",
      "name": "Give yourself to the dark side",
      "filename": "quote_give_yourself_to_the_dark_side.ogg",
      "audio_channel_id": 1
    },
    {
      "id": "if_you_only_knew_the_power_of_the_dark_side",
      "name": "If you only knew the power of the dark side",
      "filename": "quote_if_you_only_knew_the_power_of_the_dark_side.ogg",
      "audio_channel_id": 1
    },
    {
      "id": "nooooo",
      "name": "Nooooo",
      "filename": "quote_nooooo.ogg",
      "audio_channel_id": 1
    },
    {
      "id": "there_is_no_escape",
      "name": "There is no escape",
      "filename": "quote_there_is_no_escape.ogg",
      "audio_channel_id": 1
    },
    {
      "id": "your_lack_of_faith_is_disturbing",
      "name": "Your lack of faith is disturbing",
      "filename": "quote_your_lack_of_faith_is_disturbing.ogg",
      "audio_channel_id": 1
    }
  ],

  "songs": [
    {
      "id": "imperial_march_song",
      "name": "Imperial March song",
      "filename": "song_the_imperial_march.ogg",
      "audio_channel_id": 1
    }
  ],

  "sound_effects": [
    {
      "id": "breathing_sound",
      "name": "Breathing sound",
      "filename": "darth_vader_breathing.ogg",
      "audio_channel_id": 0,
      "play_opening": true,
      "loops": -1
    },
    {
      "id": "lightsaber_drawing_sound",
      "name": "Lightsaber drawing sound",
      "filename": "lightsaber_drawing_sound.ogg",
      "audio_channel_id": 2
    },
    {
      "id": "lightsaber_hum_sound",
      "name": "Lightsaber hum sound",
      "filename": "lightsaber_hum_sound.ogg",
      "audio_channel_id": 2
    },
    {
      "id": "lightsaber_retraction_sound",
      "name": "Lightsaber retraction sound",
      "filename": "lightsaber_retraction_sound.ogg",
      "audio_channel_id": 2
    },
    {
      "id": "closing_sound",
      "name": "Nooooo [Closing]",
      "filename": "quote_nooooo.ogg",
      "audio_channel_id": 2,
      "play_closing": false
    }
  ]
}
